<Window x:Class="ccc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ccc"
        xmlns:vm="clr-namespace:ccc.ViewModels"
        mc:Ignorable="d"
        Title="Atlas 2.0" Height="720" Width="1280"
        Background="#121212"> <!-- Atlas Dark Theme -->

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <!-- Main Shell Grid -->
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar -->
            <ColumnDefinition Width="260"/>
            <!-- Main Content -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Placeholder -->
        <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#333" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <TextBlock Text="ATLAS" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,10,0,20" HorizontalAlignment="Center"/>
                
                <!-- Nav Items (Placeholder) -->
                <Button Command="{Binding NavigateToPlaylistsCommand}" Content="Playlists" Background="Transparent" Foreground="#DDD" BorderThickness="0" HorizontalContentAlignment="Left" Padding="10" Margin="0,2"/>
                <Button Command="{Binding NavigateToVideosCommand}" Content="Videos" Background="Transparent" Foreground="#DDD" BorderThickness="0" HorizontalContentAlignment="Left" Padding="10" Margin="0,2"/>
                <Button Command="{Binding NavigateToEngineTestCommand}" Content="Engine Test" Background="#33FFFFFF" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="10" Margin="0,2"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                 <!-- Sticky Top Bar (Overlay) -->
                <RowDefinition Height="Auto"/>
                 <!-- View Content -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar Placeholder -->
            <Border Grid.Row="0" Height="60" Background="#121212" BorderBrush="#333" BorderThickness="0,0,0,1" Padding="20,0">
                <TextBlock Text="{Binding PageTitle}" Foreground="White" VerticalAlignment="Center" FontSize="18"/>
            </Border>

            <!-- Active View Content -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
            
        </Grid>
    </Grid>
</Window>
