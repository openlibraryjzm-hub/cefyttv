<Window x:Class="ccc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ccc"
        xmlns:vm="clr-namespace:ccc.ViewModels"
        xmlns:views="clr-namespace:ccc.Views"
        xmlns:ctrl="clr-namespace:ccc.Controls"
        xmlns:chrome="clr-namespace:ccc.Controls.Chrome"
        xmlns:lists="clr-namespace:ccc.Controls.Lists"
        xmlns:nav="clr-namespace:ccc.Controls.Navigation"
        xmlns:player="clr-namespace:ccc.Controls.Player"
        xmlns:modals="clr-namespace:ccc.Controls.Modals"

        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Atlas 2.0" Height="730" Width="1280"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="{StaticResource BgPrimaryBrush}">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="102"
                      ResizeBorderThickness="8"
                      GlassFrameThickness="0"
                      CornerRadius="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/> <!-- Advanced Player Controller (200px) -->
            <RowDefinition Height="*"/>    <!-- Main Content Area -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Strip: Advanced Player Controller -->
        <player:AdvancedPlayerController Grid.Row="0" Grid.ColumnSpan="2" Panel.ZIndex="100"/>
        
        <!-- Window Controls (Overlay) -->
        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Panel.ZIndex="200"
                    Margin="0,0,8,0" WindowChrome.IsHitTestVisibleInChrome="True">
                <chrome:WindowCaptionControls MinimizeCommand="{x:Static SystemCommands.MinimizeWindowCommand}"
                                            MaximizeCommand="{x:Static SystemCommands.MaximizeWindowCommand}"
                                            CloseCommand="{x:Static SystemCommands.CloseWindowCommand}"/> 
        </StackPanel>

        <!-- Main Content Area: Split View -->
        <!-- We flatten the split view logic slightly to allow BrowserView to live at root -->
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> <!-- Left Half: Player Placeholder -->
                <ColumnDefinition Width="*"/> <!-- Right Half: App Shell -->
            </Grid.ColumnDefinitions>

            <!-- Player Placeholder (Left Half) -->
            <player:WebViewYouTubeControls Grid.Column="0" 
                                            VideoId="{Binding CurrentVideoId}"
                                            StartTime="{Binding CurrentVideoStartTime}"
                                            VideoEndedCommand="{Binding NextVideoCommand}">
                <player:WebViewYouTubeControls.Style>
                    <Style TargetType="UserControl">
                        <Style.Triggers>
                            <!-- Existing Player FullScreen Logic -->
                            <DataTrigger Binding="{Binding IsFullScreen}" Value="True">
                                <Setter Property="Grid.ColumnSpan" Value="2"/>
                            </DataTrigger>
                            <!-- NEW: Hide Player when Browser is Full Screen to prevent Airspace bleeding -->
                            <DataTrigger Binding="{Binding BrowserVm.IsFullScreen}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </player:WebViewYouTubeControls.Style>
            </player:WebViewYouTubeControls>

            <!-- App Shell (Right Half) -->
            <Grid Grid.Column="1" Background="{StaticResource BgPrimaryBrush}">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsFullScreen}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Top Nav Bar -->
                    <RowDefinition Height="*"/>    <!-- View Content -->
                </Grid.RowDefinitions>

                <!-- Top Navigation (Phase 3 Component) -->
                <nav:TopNavBar Grid.Row="0" 
                                NavigateCommand="{Binding NavigateCommand}"
                                BackCommand="{Binding GoBackCommand}"
                                CloseCommand="{Binding CloseSidebarCommand}"
                                ActivePage="{Binding ActiveNavTab}"/>

                <!-- Dynamic View Injection: Normal Pages -->
                <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Visibility="{Binding IsLibraryVisible, Converter={StaticResource BoolToVis}}"/>
            </Grid>
            <!-- Modals Overlay -->
            <modals:ImportVideosModal Visibility="{Binding IsImportModalOpen, Converter={StaticResource BoolToVis}}"
                                      Panel.ZIndex="500"
                                      Grid.Column="1"
                                      Grid.Row="0" Grid.RowSpan="2"/>
        </Grid>

        <!-- Browser View: Moved to Root to allow covering Player (Row 0) -->
        <views:BrowserView Visibility="{Binding IsBrowserVisible, Converter={StaticResource BoolToVis}}"
                           Panel.ZIndex="300">
            <views:BrowserView.Style>
                <Style TargetType="views:BrowserView">
                    <!-- Default Placement: Row 1, Col 1 (Inside the Shell Area conceptually) -->
                    <!-- Since we are in Root Grid (2 rows), we need to be in Row 1. -->
                    <!-- But Root Grid doesn't have 2 columns. The INNER grid does. -->
                    <!-- We must align to right half manually or use a specialized Grid at root. -->
                    <!-- Solution: Use Grid.Column="0" of Root, but Margin/Width? No. -->
                    <!-- Better: Use a Root Grid with 2 Columns always. Re-structuring surrounding Grid... -->
                    <!-- Wait, if we change the Root Layout, we affect everything. -->
                    <!-- Alternative: Put BrowserView in Row 1, but make it span. -->
                    <!-- If we are in Row 1, we are just 'below' the player. -->
                    <!-- To cover the player, we need Row 0. -->
                    <Setter Property="Grid.Row" Value="1"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>

                    <!-- TopNavBar Compensation: Start 55px down by default so TopNav is visible above -->
                    <Setter Property="Margin" Value="0,55,0,0"/>
                    
                    <!-- Hack: To match 50/50 split of inner grid without defining cols in root -->
                    <!-- We can bind Width to 50%? No. -->
                    <!-- Let's just define columns in Root Grid. -->
                     <Setter Property="Grid.Column" Value="1"/> 
                     <!-- This assumes Root Grid HAS columns. We must add them. -->

                    <Style.Triggers>
                        <!-- Full Screen Mode: Cover Everything -->
                        <DataTrigger Binding="{Binding BrowserVm.IsFullScreen}" Value="True">
                            <Setter Property="Grid.Row" Value="0"/>
                            <Setter Property="Grid.RowSpan" Value="2"/>
                            <Setter Property="Grid.Column" Value="0"/>
                            <Setter Property="Grid.ColumnSpan" Value="2"/>
                            <Setter Property="Margin" Value="0"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </views:BrowserView.Style>
        </views:BrowserView>

    </Grid>

    <!-- Note: TripleEngineTestView is removed for now as per user request to test UI Shell. 
         Engine integration will return in Phase 5/6 wiring. -->
    

</Window>
