<Window x:Class="ccc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ccc"
        xmlns:vm="clr-namespace:ccc.ViewModels"
        xmlns:views="clr-namespace:ccc.Views"
        xmlns:ctrl="clr-namespace:ccc.Controls"
        xmlns:lists="clr-namespace:ccc.Controls.Lists"
        xmlns:nav="clr-namespace:ccc.Controls.Navigation"

        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Atlas 2.0" Height="720" Width="1280"
        Background="#121212"> 

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="#11FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/> <!-- Left Half: Player Placeholder -->
            <ColumnDefinition Width="*"/> <!-- Right Half: App Shell -->
        </Grid.ColumnDefinitions>

        <!-- Player Placeholder (Left Half) -->
        <Border Grid.Column="0" Background="Black">
            <TextBlock Text="[Video Player Placeholder]" Foreground="#555" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        </Border>

        <!-- App Shell (Right Half) -->
        <Grid Grid.Column="1" Background="{StaticResource BgPrimaryBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Top Nav Bar -->
                <RowDefinition Height="*"/>    <!-- View Content -->
            </Grid.RowDefinitions>

            <!-- Top Navigation (Phase 3 Component) -->
            <nav:TopNavBar Grid.Row="0" 
                            NavigateCommand="{Binding NavigateCommand}"
                            BackCommand="{Binding GoBackCommand}"
                            CloseCommand="{Binding CloseSidebarCommand}"/>

            <!-- Dynamic View Injection -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
            
        </Grid>

        <!-- Note: TripleEngineTestView is removed for now as per user request to test UI Shell. 
             Engine integration will return in Phase 5/6 wiring. -->
    </Grid>
    

</Window>
