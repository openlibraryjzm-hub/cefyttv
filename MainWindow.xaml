<Window x:Class="ccc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ccc"
        xmlns:vm="clr-namespace:ccc.ViewModels"
        xmlns:views="clr-namespace:ccc.Views"
        xmlns:ctrl="clr-namespace:ccc.Controls"
        xmlns:lists="clr-namespace:ccc.Controls.Lists"
        xmlns:nav="clr-namespace:ccc.Controls.Navigation"
        xmlns:player="clr-namespace:ccc.Controls.Player"

        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Atlas 2.0" Height="720" Width="1280"
        Background="{StaticResource BgPrimaryBrush}"> 

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="102"/> <!-- Advanced Player Controller (102px) -->
            <RowDefinition Height="*"/>    <!-- Main Content Area -->
        </Grid.RowDefinitions>

        <!-- Top Strip: Advanced Player Controller -->
        <player:AdvancedPlayerController Grid.Row="0" Panel.ZIndex="100"/>

        <!-- Main Content Area: Split View -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> <!-- Left Half: Player Placeholder -->
                <ColumnDefinition Width="*"/> <!-- Right Half: App Shell -->
            </Grid.ColumnDefinitions>

            <!-- Player Placeholder (Left Half) -->
            <player:WebViewYouTubeControls Grid.Column="0" 
                                           VideoId="{Binding CurrentVideoId}"/>

            <!-- App Shell (Right Half) -->
            <Grid Grid.Column="1" Background="{StaticResource BgPrimaryBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Top Nav Bar -->
                    <RowDefinition Height="*"/>    <!-- View Content -->
                </Grid.RowDefinitions>

                <!-- Top Navigation (Phase 3 Component) -->
                <nav:TopNavBar Grid.Row="0" 
                                NavigateCommand="{Binding NavigateCommand}"
                                BackCommand="{Binding GoBackCommand}"
                                CloseCommand="{Binding CloseSidebarCommand}"/>

                <!-- Dynamic View Injection -->
                <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
            </Grid>
        </Grid>
    </Grid>

    <!-- Note: TripleEngineTestView is removed for now as per user request to test UI Shell. 
         Engine integration will return in Phase 5/6 wiring. -->
    

</Window>
