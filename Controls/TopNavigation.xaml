<UserControl x:Class="ccc.Controls.TopNavigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="ActiveBorder" Color="#0ea5e9"/>
        <SolidColorBrush x:Key="InactiveBorder" Color="#334155"/>
        <SolidColorBrush x:Key="ActiveText" Color="#0ea5e9"/>
        <SolidColorBrush x:Key="InactiveText" Color="#475569"/>

        <!-- Pill Button Style -->
        <Style x:Key="NavPill" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource InactiveBorder}"/>
            <Setter Property="Foreground" Value="{StaticResource InactiveText}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="20">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Circular Button Style -->
        <Style x:Key="NavCircle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource InactiveBorder}"/>
            <Setter Property="Foreground" Value="{StaticResource InactiveText}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="18">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10">
        <!-- Main Sections (Pills) -->
        <Button Command="{Binding NavigateToPlaylistsCommand}" Style="{StaticResource NavPill}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE80A;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                <TextBlock Text="Playlists" FontWeight="SemiBold"/>
            </StackPanel>
        </Button>

        <Button Command="{Binding NavigateToVideosCommand}" Style="{StaticResource NavPill}">
             <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE714;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                <TextBlock Text="Videos" FontWeight="SemiBold"/>
            </StackPanel>
        </Button>

        <Button Command="{Binding NavigateToBrowserCommand}" Style="{StaticResource NavPill}">
             <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                <TextBlock Text="Browser" FontWeight="SemiBold"/>
            </StackPanel>
        </Button>

        <Border Width="1" Height="24" Background="#333" Margin="10,0"/>

        <!-- Icons (Circles) -->
        <Button Command="{Binding NavigateToHistoryCommand}" Style="{StaticResource NavCircle}" ToolTip="History">
            <TextBlock Text="&#xE81C;" FontFamily="Segoe MDL2 Assets"/>
        </Button>

        <Button Command="{Binding NavigateToPinsCommand}" Style="{StaticResource NavCircle}" ToolTip="Pins">
             <TextBlock Text="&#xE718;" FontFamily="Segoe MDL2 Assets"/>
        </Button>
        
        <Button Command="{Binding NavigateToSettingsCommand}" Style="{StaticResource NavCircle}" ToolTip="Settings">
             <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets"/>
        </Button>

        <Button Command="{Binding NavigateToSupportCommand}" Style="{StaticResource NavCircle}" ToolTip="Support">
             <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets"/>
        </Button>
    </StackPanel>
</UserControl>
