<UserControl x:Class="ccc.Controls.Cards.HistoryCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ccc.Controls.Cards"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    
    <Border Background="Transparent" Padding="0" Margin="0,4" Height="100">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="178"/> <!-- 16:9 Approx for height 100 -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Thumbnail -->
            <!-- Using Border to match VideoCard rounded border style -->
            <Border Grid.Column="0" Height="100" CornerRadius="8" BorderBrush="Black" BorderThickness="3" Background="Black">
                <local:CardThumbnail Source="{Binding ThumbnailUrl}"
                                     HasProgress="True"
                                     Progress="{Binding ProgressPercentage}" 
                                     CornerRadius="5"
                                     ImageStretch="Uniform"/>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0">
                <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" Foreground="#052F4A" TextTrimming="CharacterEllipsis"/>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock Text="ðŸ•’" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding RelativeTime}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                </StackPanel>
            </StackPanel>

            <!-- Hover Play Button Overlay -->
            <Grid Grid.Column="0" Background="#66000000" 
                  Visibility="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="â–¶" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
