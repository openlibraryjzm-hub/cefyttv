<UserControl x:Class="ccc.Controls.Cards.PlaylistCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ccc.Controls.Cards"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="320">

    <Border Padding="8" BorderThickness="2" CornerRadius="12">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="#331E293B"/>
                <Setter Property="BorderBrush" Value="#80334155"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="#8038BDF8"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header (Title) -->
                <RowDefinition Height="*"/>    <!-- Thumbnail -->
            </Grid.RowDefinitions>

            <!-- Title Header (Inner Rectangle) -->
            <Border Grid.Row="0" Height="38" Margin="0,0,0,8" 
                    Background="#E6F1F5F9" BorderBrush="#052F4A" BorderThickness="2" CornerRadius="6"
                    Padding="8,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="{Binding Name}" 
                               FontSize="18" FontWeight="Bold" Foreground="#052F4A" 
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>

                    <!-- Hover Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                                Visibility="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button Content="â–¶" Width="20" Height="20" Style="{StaticResource InvisibleBtn}" ToolTip="Play" Margin="0,0,4,0" Foreground="#052F4A"/>
                        <Button Content="ðŸ”€" Width="20" Height="20" Style="{StaticResource InvisibleBtn}" ToolTip="Shuffle" Foreground="#052F4A"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Thumbnail -->
            <local:CardThumbnail Grid.Row="1"
                                 Source="{Binding ThumbnailUrl}"
                                 CornerRadius="8"
                                 ImageStretch="Uniform"/>
        </Grid>
    </Border>
</UserControl>
