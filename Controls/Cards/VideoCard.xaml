<UserControl x:Class="ccc.Controls.Cards.VideoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="300"
             Cursor="Hand">
    <UserControl.Resources>
        <Style x:Key="CardHover" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1AFFFFFF"/>
                    <Setter Property="BorderBrush" Value="#33FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource CardHover}" BorderThickness="1" CornerRadius="8" Padding="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Thumbnail (16:9) -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Thumbnail Container -->
            <Border Grid.Row="0" CornerRadius="6" ClipToBounds="True" Background="#111">
                <Grid>
                    <Image Source="{Binding ThumbnailUrl}" Stretch="UniformToFill" Height="160"/>
                    
                    <!-- Duration Badge -->
                    <Border Background="#CC000000" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="6" CornerRadius="4" Padding="6,2">
                        <TextBlock Text="{Binding DurationString}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                    </Border>
                    
                    <!-- Progress Bar (Red) -->
                    <Rectangle Height="2" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100" Fill="#ef4444" 
                               Visibility="{Binding HasProgress, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- Metadata -->
            <StackPanel Grid.Row="1" Margin="4,8,4,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Title -->
                    <TextBlock Grid.Column="0" Text="{Binding Title}" Foreground="White" FontWeight="Bold" FontSize="13" TextTrimming="CharacterEllipsis" MaxHeight="36"/>
                    
                    <!-- Menu (3 dots) -->
                    <Button Grid.Column="1" Width="24" Height="24" Background="Transparent" BorderThickness="0" Foreground="#94a3b8" Margin="4,-4,0,0">
                         <TextBlock Text="&#xE712;" FontFamily="Segoe MDL2 Assets"/>
                    </Button>
                </Grid>
                
                <TextBlock Text="{Binding Author}" Foreground="#94a3b8" FontSize="12" Margin="0,2,0,0" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
