<UserControl x:Class="ccc.Controls.Player.WebViewYouTubeControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <!-- WebView2 Control -->
        <wv2:WebView2 x:Name="PlayerWebView"/>
        
        <!-- Optional Overlay Controls if needed later -->
        <TextBlock x:Name="OverlayText" Text="Select a video to play" Foreground="#555" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   IsHitTestVisible="False"/>
    </Grid>
</UserControl>
