<UserControl x:Class="ccc.Controls.AdvancedPlayerController.MainController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ccc.Controls.AdvancedPlayerController"
             mc:Ignorable="d" 
             d:DesignHeight="160" d:DesignWidth="1000">
    <Grid Height="160">
        <!-- Banner Placeholder -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0f172a" Offset="0"/>
                <GradientStop Color="#334155" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/> <!-- Playlist Menu -->
            <ColumnDefinition Width="Auto"/> <!-- Gap -->
            <ColumnDefinition Width="Auto"/> <!-- Orb -->
            <ColumnDefinition Width="Auto"/> <!-- Gap -->
            <ColumnDefinition Width="Auto"/> <!-- Video Menu -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:PlaylistMenu Grid.Column="1" Width="340" Height="102" VerticalAlignment="Center"/>
        
        <Border Grid.Column="2" Width="20"/>
        
        <local:PlayerOrb Grid.Column="3" Width="154" Height="154" VerticalAlignment="Center" Panel.ZIndex="10"/>

        <Border Grid.Column="4" Width="20"/>

        <local:VideoMenu Grid.Column="5" Width="340" Height="102" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
