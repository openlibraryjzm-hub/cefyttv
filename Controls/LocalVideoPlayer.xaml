<UserControl x:Class="ccc.Controls.LocalVideoPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- This hosts the native MPV window -->
        <WindowsFormsHost x:Name="PlayerHost" Grid.Row="0">
            <wf:Panel x:Name="VideoPanel" BackColor="Black"/>
        </WindowsFormsHost>
        
        <!-- Status Area (Outside the Airspace of WinForms) -->
        <TextBlock x:Name="StatusText" 
                   Grid.Row="1"
                   Text="MPV Ready" 
                   Foreground="White"
                   Background="#333"
                   Padding="10"
                   HorizontalAlignment="Stretch" 
                   TextAlignment="Center"
                   Visibility="Collapsed"/>
    </Grid>
</UserControl>
