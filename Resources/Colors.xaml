<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Core Theme Colors (Dark Mode Premium) -->
    <!-- Bases -->
    <Color x:Key="BgDeepColor">#020617</Color>         <!-- Main Window Background (Slate-950) -->
    <Color x:Key="BgCardColor">#1e293b</Color>         <!-- Cards/Panels (Slate-800) -->
    <Color x:Key="BgHoverColor">#334155</Color>        <!-- Hover States (Slate-700) -->
    
    <!-- Text -->
    <Color x:Key="TextPrimaryColor">#f8fafc</Color>    <!-- Slate-50 -->
    <Color x:Key="TextSecondaryColor">#94a3b8</Color>  <!-- Slate-400 -->
    <Color x:Key="TextMutedColor">#64748b</Color>      <!-- Slate-500 -->

    <!-- Accents -->
    <Color x:Key="AccentPrimaryColor">#ef4444</Color>  <!-- Red-500 (Brand) -->
    <Color x:Key="AccentGlowColor">#7f1d1d</Color>     <!-- Red-900 (Glows) -->

    <!-- Borders -->
    <Color x:Key="BorderBaseColor">#334155</Color>     <!-- Slate-700 -->
    <Color x:Key="BorderLightColor">#475569</Color>    <!-- Slate-600 -->

    <!-- Brushes -->
    <SolidColorBrush x:Key="BgPrimaryBrush" Color="{StaticResource BgDeepColor}"/>
    <SolidColorBrush x:Key="BgSecondaryBrush" Color="{StaticResource BgCardColor}"/> <!-- Used for Cards/Sidebars -->
    <SolidColorBrush x:Key="BgTertiaryBrush" Color="{StaticResource BgHoverColor}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>
    
    <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{StaticResource AccentPrimaryColor}"/>
    <SolidColorBrush x:Key="AccentGlowBrush" Color="{StaticResource AccentGlowColor}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderBaseColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>
    
    <!-- Semitransparent Brushes for Glassmorphism -->
    <SolidColorBrush x:Key="GlassCardBrush" Color="#CC1e293b"/> <!-- 80% Opacity Slate-800 -->
    <SolidColorBrush x:Key="GlassBorderBrush" Color="#80334155"/> <!-- 50% Opacity Slate-700 -->

    <!-- Folder Colors -->
    <Color x:Key="FolderRed">#ef4444</Color>
    <Color x:Key="FolderOrange">#f97316</Color>
    <Color x:Key="FolderAmber">#f59e0b</Color>
    <Color x:Key="FolderYellow">#eab308</Color>
    <Color x:Key="FolderLime">#84cc16</Color>
    <Color x:Key="FolderGreen">#22c55e</Color>
    <Color x:Key="FolderEmerald">#10b981</Color>
    <Color x:Key="FolderTeal">#14b8a6</Color>
    <Color x:Key="FolderCyan">#06b6d4</Color>
    <Color x:Key="FolderSky">#0ea5e9</Color>
    <Color x:Key="FolderBlue">#3b82f6</Color>
    <Color x:Key="FolderIndigo">#6366f1</Color>
    <Color x:Key="FolderViolet">#8b5cf6</Color>
    <Color x:Key="FolderPurple">#a855f7</Color>
    <Color x:Key="FolderFuchsia">#d946ef</Color>
    <Color x:Key="FolderPink">#ec4899</Color>

    <SolidColorBrush x:Key="FolderRedBrush" Color="{StaticResource FolderRed}"/>
    <SolidColorBrush x:Key="FolderOrangeBrush" Color="{StaticResource FolderOrange}"/>
    <SolidColorBrush x:Key="FolderAmberBrush" Color="{StaticResource FolderAmber}"/>
    <SolidColorBrush x:Key="FolderYellowBrush" Color="{StaticResource FolderYellow}"/>
    <SolidColorBrush x:Key="FolderLimeBrush" Color="{StaticResource FolderLime}"/>
    <SolidColorBrush x:Key="FolderGreenBrush" Color="{StaticResource FolderGreen}"/>
    <SolidColorBrush x:Key="FolderEmeraldBrush" Color="{StaticResource FolderEmerald}"/>
    <SolidColorBrush x:Key="FolderTealBrush" Color="{StaticResource FolderTeal}"/>
    <SolidColorBrush x:Key="FolderCyanBrush" Color="{StaticResource FolderCyan}"/>
    <SolidColorBrush x:Key="FolderSkyBrush" Color="{StaticResource FolderSky}"/>
    <SolidColorBrush x:Key="FolderBlueBrush" Color="{StaticResource FolderBlue}"/>
    <SolidColorBrush x:Key="FolderIndigoBrush" Color="{StaticResource FolderIndigo}"/>
    <SolidColorBrush x:Key="FolderVioletBrush" Color="{StaticResource FolderViolet}"/>
    <SolidColorBrush x:Key="FolderPurpleBrush" Color="{StaticResource FolderPurple}"/>
    <SolidColorBrush x:Key="FolderFuchsiaBrush" Color="{StaticResource FolderFuchsia}"/>
    <SolidColorBrush x:Key="FolderPinkBrush" Color="{StaticResource FolderPink}"/>

</ResourceDictionary>
