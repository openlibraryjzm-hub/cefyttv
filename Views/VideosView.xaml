                    <Button Command="{Binding FilterByFolderCommand}" CommandParameter="red" Margin="2">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bd" Width="16" Height="16" CornerRadius="8" Background="{StaticResource FolderRedBrush}" Cursor="Hand"/>
                                <ControlTemplate.Triggers>
                                    <DataTrigger Binding="{Binding SelectedFolderColor}" Value="red">
                                        <Setter TargetName="bd" Property="BorderThickness" Value="2"/>
                                        <Setter TargetName="bd" Property="BorderBrush" Value="White"/>
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

