<UserControl x:Class="ccc.Views.PlaylistsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ccc.Views"
             xmlns:visuals="clr-namespace:ccc.Controls.Visuals"
             xmlns:cards="clr-namespace:ccc.Controls.Cards"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080"
             Background="#121212">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Banner -->
        <visuals:PageBanner Grid.Row="0" 
                            Title="Playlists" 
                            Description="Your local library collection."
                            AvatarAscii="ðŸ“‚"
                            VideoCountText="24 Playlists â€¢ 192 Videos"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="20">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Playlists}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" FirstColumn="0"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <cards:PlaylistCard Margin="12" Height="380">
                                 <cards:PlaylistCard.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                                  Command="{Binding DataContext.OpenPlaylistCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                  CommandParameter="{Binding Id}"/>
                                </cards:PlaylistCard.InputBindings>
                            </cards:PlaylistCard>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Pagination Footer -->
                <Border Padding="20" Background="#0F172A" Margin="0,20,0,0" CornerRadius="8">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Previous" 
                                Command="{Binding PrevPlaylistPageCommand}"
                                Background="Transparent" Foreground="White" BorderThickness="1" BorderBrush="#334155" Padding="12,6" Margin="0,0,12,0" 
                                Style="{StaticResource InvisibleBtn}"/>
                        
                        <TextBlock Text="{Binding PlaylistPageText}" 
                                   Foreground="#94A3B8"
                                   VerticalAlignment="Center" Margin="12,0"/>

                        <Button Content="Next" 
                                Command="{Binding NextPlaylistPageCommand}"
                                Background="Transparent" Foreground="White" BorderThickness="1" BorderBrush="#334155" Padding="12,6" Margin="12,0,0,0" 
                                Style="{StaticResource InvisibleBtn}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
